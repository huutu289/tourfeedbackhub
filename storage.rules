rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes only for authenticated users.
    // This is secure because only admins can access the pages that upload files.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
