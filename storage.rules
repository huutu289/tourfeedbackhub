rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
      // Allow write access for all users.
      // This is safe in this context because only admins can initiate uploads
      // from the secure admin section of the application.
      allow write;
    }
  }
}
